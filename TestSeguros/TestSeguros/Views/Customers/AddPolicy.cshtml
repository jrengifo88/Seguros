@{
    ViewBag.Title = "Add Policy";
}

<div class="jumbotron">
    <div>
        <h1>Adicionar Póliza</h1>
        <h2>Detalle Cliente: @ViewBag.FullName</h2>
        <h3>Identificación: @ViewBag.Identification</h3>
        @using (Html.BeginForm("AddPolicy", "Customers", FormMethod.Post))
        {
    <div class="form-group">
        <label for="policyId">Póliza:</label>
        <select class="form-control" name="policyId">
            @foreach (var item in ViewBag.policies)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group">       
        <input type="text" name="customerId" value="@ViewBag.CustomerId" hidden />
    </div>
    <div class="form-group">
        <label for="meses">Meses Cobertura:</label>
        <input class="form-control" type="text" name="meses" />
    </div>
            <div class="form-group">
                <label for="riesgo">Riesgo:</label>
                <select class="form-control" name="riesgo">
                    <option value="Bajo">Bajo</option>
                    <option value="Medio">Medio</option>
                    <option value="Medio-Alto">Medio-Alto</option>
                    <option value="Alto">Alto</option>
                </select>
            </div>
            <div class="form-group">
                <label for="precio">Precio:</label>
                <input class="form-control" type="number" name="precio" />
            </div>
            <div class="form-group">
                <label for="cobertura">Cobertura (%):</label>
                <input class="form-control" type="number" name="cobertura" />
            </div>
            <button type="submit" class="btn btn-primary">Adicionar</button>
        }

    </div>
    @{ if (ViewBag.Error != null)
        {
            <h3>@ViewBag.Error</h3>
        }
    }
</div>

