@{
    ViewBag.Title = "Add Covering";
}

<div class="jumbotron">
    <div>
        <h1>Adicionar Tipo de Cobertura</h1>
        <h2> @ViewBag.PolicyName</h2>
        @using (Html.BeginForm("AddCovering", "Policies", FormMethod.Post))
        {
            <div class="form-group">
                <label for="coveringId">Tipo Cobertura:</label>
                <select class="form-control" name="coveringId">
                    @foreach (var item in ViewBag.coveringTypes)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="text" name="policyId" value="@ViewBag.PolicyId" hidden />
            </div>
            <button type="submit" class="btn btn-primary">Adicionar</button>
        }

    </div>
    @{ if (ViewBag.Error != null)
        {
            <h3>@ViewBag.Error</h3>
        }
    }
</div>

