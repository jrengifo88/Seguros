@model TestSeguros.Models.CoveringModelView

@{
    ViewBag.Title = "CoveringDetails";
}

<h2>Detalles de Cubrimiento para: @Model.policy.nombre</h2>

<p>
    @Html.ActionLink("Adicionar Cubrimiento", "AddCovering", new { policyId = Model.policy.id})
</p>
<table class="table">
    <tr>
        <th>Cubrimiento</th>
       
    </tr>

@foreach (var item in Model.covering) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
       
    </tr>
}

</table>
<div>
    @Html.ActionLink("Volver", "Policies", "Policies")
</div>